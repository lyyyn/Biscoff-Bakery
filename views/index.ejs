<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
    <title>Welcome to Biscoff Bakery</title>
</head>

<body>
    <div class="hero-image">
        <div class="image is-3by1 cover">
            <h1 class="title myhero-title">Welcome to Biscoff Bakery</h1>
        </div>
    </div>

    <div class="my-section">
        <h1 class="title is-1">Our Products</h1>
    </div>

    <div class="my-section">
        <div class="flex-prod">
            <%products.forEach((product,idx)=>{%>
            <div class="mycard">
                <img class="mycard-image" src="<%=product.image%>" alt="<%=product.name%>">
                <p><strong><%=product.name%></strong></p>
                <p><em>SGD <%=product.price%></em></p>
                <a class="button bottom" href="/<%=idx%>">View Details</a>
            </div>
            
            <%})%>
        </div>
    </div>
</body>

</html>