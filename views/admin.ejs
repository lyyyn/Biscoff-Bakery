            </div>
            <div class="column is-one-fifths">
                Unit Price
            </div>
            <div class="column is-one-fifths">
                Action
            </div>
        </div>
        <%products.forEach((product,idx)=>{%>
            <%- include('./partials/be-listing.ejs', {product, idx}) %>
        <%})%>
